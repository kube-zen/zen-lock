{
  "dashboard": {
    "title": "zen-lock Controller Dashboard",
    "tags": ["zen-lock", "kubernetes", "secret-management"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Reconciliations by Result",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zenlock_reconcile_total{result=\"success\"}[5m])) * 300",
            "legendFormat": "Success (5m)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_reconcile_total{result=\"error\"}[5m])) * 300",
            "legendFormat": "Error (5m)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Webhook Injections by Result",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"success\"}[5m])) * 300",
            "legendFormat": "Success (5m)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"error\"}[5m])) * 300",
            "legendFormat": "Error (5m)",
            "refId": "B"
          },
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"denied\"}[5m])) * 300",
            "legendFormat": "Denied (5m)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Decryption Operations by Result",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zenlock_decryption_total{result=\"success\"}[5m])) * 300",
            "legendFormat": "Success (5m)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_decryption_total{result=\"error\"}[5m])) * 300",
            "legendFormat": "Error (5m)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Reconciliation Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(zenlock_reconcile_total[5m]))",
            "legendFormat": "Reconciliations/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "ops"
          }
        }
      },
      {
        "id": 5,
        "title": "Webhook Injection Rate Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"success\"}[5m])) by (namespace, zenlock_name)",
            "legendFormat": "{{namespace}}/{{zenlock_name}} - Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"error\"}[5m])) by (namespace, zenlock_name)",
            "legendFormat": "{{namespace}}/{{zenlock_name}} - Error",
            "refId": "B"
          },
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"denied\"}[5m])) by (namespace, zenlock_name)",
            "legendFormat": "{{namespace}}/{{zenlock_name}} - Denied",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Injections/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Webhook Injection Duration (P95/P50)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zenlock_webhook_injection_duration_seconds_bucket[5m])) by (le, namespace, zenlock_name))",
            "legendFormat": "P95 - {{namespace}}/{{zenlock_name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(zenlock_webhook_injection_duration_seconds_bucket[5m])) by (le, namespace, zenlock_name))",
            "legendFormat": "P50 - {{namespace}}/{{zenlock_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Reconciliation Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zenlock_reconcile_duration_seconds_bucket[5m])) by (le, namespace, name))",
            "legendFormat": "P95 - {{namespace}}/{{name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(zenlock_reconcile_duration_seconds_bucket[5m])) by (le, namespace, name))",
            "legendFormat": "P50 - {{namespace}}/{{name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Decryption Duration (P95/P50)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(zenlock_decryption_duration_seconds_bucket[5m])) by (le, namespace, zenlock_name))",
            "legendFormat": "P95 - {{namespace}}/{{zenlock_name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(zenlock_decryption_duration_seconds_bucket[5m])) by (le, namespace, zenlock_name))",
            "legendFormat": "P50 - {{namespace}}/{{zenlock_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Error Rate Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(zenlock_reconcile_total{result=\"error\"}[5m]))",
            "legendFormat": "Reconciliation Errors",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_webhook_injection_total{result=\"error\"}[5m]))",
            "legendFormat": "Webhook Injection Errors",
            "refId": "B"
          },
          {
            "expr": "sum(rate(zenlock_decryption_total{result=\"error\"}[5m]))",
            "legendFormat": "Decryption Errors",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Top ZenLocks by Injection Count",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(rate(zenlock_webhook_injection_total{result=\"success\"}[5m])) by (namespace, zenlock_name))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "namespace": 0,
                "zenlock_name": 1,
                "Value": 2
              },
              "renameByName": {
                "namespace": "Namespace",
                "zenlock_name": "ZenLock",
                "Value": "Injection Rate (ops)"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Top ZenLocks by Decryption Count",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(rate(zenlock_decryption_total{result=\"success\"}[5m])) by (namespace, zenlock_name))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "namespace": 0,
                "zenlock_name": 1,
                "Value": 2
              },
              "renameByName": {
                "namespace": "Namespace",
                "zenlock_name": "ZenLock",
                "Value": "Decryption Rate (ops)"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Cache Hit Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "sum(rate(zenlock_cache_hits_total[5m])) / (sum(rate(zenlock_cache_hits_total[5m])) + sum(rate(zenlock_cache_misses_total[5m]))) * 100",
            "legendFormat": "Cache Hit Rate (%)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Cache Hits vs Misses",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "sum(rate(zenlock_cache_hits_total[5m])) by (namespace, zenlock_name)",
            "legendFormat": "Hits - {{namespace}}/{{zenlock_name}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_cache_misses_total[5m])) by (namespace, zenlock_name)",
            "legendFormat": "Misses - {{namespace}}/{{zenlock_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Cache Operations/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 14,
        "title": "Webhook Validation Failures",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "sum(rate(zenlock_webhook_validation_failures_total[5m])) by (namespace, reason)",
            "legendFormat": "{{namespace}} - {{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Failures/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 15,
        "title": "Algorithm Usage Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48},
        "targets": [
          {
            "expr": "sum(rate(zenlock_algorithm_usage_total[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          },
          "pieType": "pie"
        }
      },
      {
        "id": 16,
        "title": "Algorithm Usage Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 56},
        "targets": [
          {
            "expr": "sum(rate(zenlock_algorithm_usage_total{operation=\"encrypt\"}[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}} - Encrypt",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_algorithm_usage_total{operation=\"decrypt\"}[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}} - Decrypt",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Operations/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 17,
        "title": "Algorithm Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 64},
        "targets": [
          {
            "expr": "sum(rate(zenlock_algorithm_errors_total{reason=\"unsupported\"}[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}} - Unsupported",
            "refId": "A"
          },
          {
            "expr": "sum(rate(zenlock_algorithm_errors_total{reason=\"invalid\"}[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}} - Invalid",
            "refId": "B"
          },
          {
            "expr": "sum(rate(zenlock_algorithm_errors_total{reason=\"decryption_failed\"}[5m])) by (algorithm)",
            "legendFormat": "{{algorithm}} - Decryption Failed",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 18,
        "title": "Cache Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 36},
        "targets": [
          {
            "expr": "zenlock_cache_size",
            "legendFormat": "Cache Size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "orange"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 19,
        "title": "Cache Hit Rate (Gauge)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 36},
        "targets": [
          {
            "expr": "zenlock_cache_hit_rate",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 20,
        "title": "Cache Size Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "zenlock_cache_size",
            "legendFormat": "Cache Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Entries"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 21,
        "title": "Cache Hit Rate Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "zenlock_cache_hit_rate",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "Hit Rate",
            "min": 0,
            "max": 1
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}

